<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokfondlayout"
    tools:context="com.rezzoug.sigler.pokedex.FirstGeneration">


    <TextView
        android:id="@+id/txtnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="200dp"
        android:text="@string/Dialogtxt"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Btbulb"
        app:layout_constraintTop_toBottomOf="@+id/rv_element_name" />

    <TextView
        android:id="@+id/rv_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="50dp"
        android:text="@string/Notiftxt"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Btsala"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/Btsala"
        android:layout_width="@dimen/square"
        android:layout_height="@dimen/square"
        android:layout_marginTop="32dp"
        android:background="@drawable/sala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Btbulb"
        android:layout_width="@dimen/square"
        android:layout_height="@dimen/square"
        android:layout_marginTop="32dp"
        android:background="@drawable/bulb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btsala" />


</android.support.constraint.ConstraintLayout>